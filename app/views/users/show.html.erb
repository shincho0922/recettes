<%= render "shared/header" %>
<div class=user_name>
  <%= image_tag @user.avatar%>
  <%= @user.name %>さんの投稿一覧
</div>
<div class="tweet_content">
  <% @tweets.each do |tweet| %>
    <div class="tweet">
      <div class="text">
        <%= tweet.name %>
      </div>
      <div class="image">
        <%= link_to image_tag(tweet.image) , tweet_path(tweet.id), method: :get %>
      </div>
    </div>
  <% end %>
</div>