<%= render "shared/header" %>
<div class=user_name>
  <%= image_tag @user.avatar%>
  <%= @user.name %>さんの投稿一覧 
</div>
<% if current_user.id == @user.id%>
  <div class="edit_user">
  <%= link_to "編集する", edit_user_registration_path, method: :get %>
  </div>
<% end %>
<div class="tweet_content">
  <% @tweets.each do |tweet| %>
    <div class="tweet">
      <div class="text">
        <%= tweet.name %>
      </div>
      <div class="image">
        <%= link_to image_tag(tweet.image) , tweet_path(tweet.id), method: :get %>
      </div>
    </div>
  <% end %>
</div>