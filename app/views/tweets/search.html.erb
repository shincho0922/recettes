<%= render "shared/header" %>

<div class="tweet_content">
  <% if @tweets == []%>
    <div>
    <P>検索結果がありません。</P>
    </div>
  <% else %>
    <% @tweets.each do |tweet| %>
      <div class="tweet">
        <div class="text">
          <%= tweet.name %>
        </div>
        <div class="image">
          <%= link_to image_tag(tweet.image) , tweet_path(tweet.id), method: :get %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
